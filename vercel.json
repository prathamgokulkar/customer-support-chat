{
    "version": 2,
    "builds": [
        {
            "src": "server/api/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist" }
        }
    ],
    "rewrites": [
        { "source": "/api/(.*)", "destination": "/server/api/index.ts" },
        { "source": "/(.*)", "destination": "/index.html" }
    ]
}
